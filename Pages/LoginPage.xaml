<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiXtream.Pages.LoginPage"
             Title="LoginPage"
             NavigationPage.HasNavigationBar="False">
    <StackLayout VerticalOptions="CenterAndExpand"
                 HorizontalOptions="FillAndExpand"
                 MaximumWidthRequest="360"
                 Margin="16" Padding="16" Spacing="16">
        <Label 
            Text="LOGIN"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <Label
            Text="Username" />
        <Entry Placeholder="UserName" x:Name="txtUserName" />
        
        <Label
            Text="Password" />
        
        <Entry Placeholder="Password" x:Name="txtPassword" IsPassword="True" />
        
        <Label
            Text="Server" />
        
        <Entry Placeholder="Server" x:Name="txtServer" />
        
        <Button Text="Login" x:Name="btnLogin" Clicked="OnLoginClicked" />
        <Button Text="Register" x:Name="btnRegister" Clicked="OnRegisterClicked" />
        
    </StackLayout>
</ContentPage>